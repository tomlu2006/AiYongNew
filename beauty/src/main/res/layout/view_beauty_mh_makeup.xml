<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/btn_hide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_beauty_height"
        android:background="@color/bg_black"
        android:translationY="@dimen/view_beauty_height"
         >

        <LinearLayout
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_beauty_viewpager"
            >
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/beauty_mh_016"
                android:textColor="@color/global"
                android:textSize="13sp">
            </TextView>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mh_gray2"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/makeup_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottom_control"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_beauty_capture_bottom">

            <FrameLayout
                android:id="@+id/hide"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_close">

                </ImageView>

            </FrameLayout>


            <ImageView
                android:visibility="gone"
                android:id="@+id/capture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_capture"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
